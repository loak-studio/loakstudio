---
const {mockup, title, type, date, description, slug, href} = Astro.props
---
<section class="flex flex-col items-center max-w-6xl px-4 mx-auto lg:flex-row gap-14 mt-14 lg:px-0">
    <figure class="flex items-center justify-center row-span-3 p-10 h-80 w-80 lg:bg-primary-lighter rounded-3xl">
        <img src={"/portfolio/" + slug + "/" + mockup} alt="">
    </figure>
    <div class="flex flex-col gap-4 lg:gap-10">
        <h1 class="text-5xl">{title}</h1>
        <span class="text-lgrey-dark">{type}, {date}</span>
        <p class="max-w-[64ch]">{description}</p>
        {href &&
        <a class="font-bold hover:underline" target="_blank " href={href}>🔗 Voir le projet</a>
        }
        {!href &&
        <p class="italic text-gray-600">⏳ Ce projet n'est pas encore disponible en ligne.</p>
        }
    </div>
</section>