---
import Image from "@components/atoms/Image.astro";
import ReadMore from "@components/atoms/ReadMore.astro";
const { href,title, text, picture } = Astro.props
---

<div class="relative bg-gray-200 transition lg:hover:bg-gray-100 gap-4 md:space-x-4 flex flex-col md:flex-row p-4 rounded-md">
    <figure class="w-52 shrink-0">
        <Image classes="rounded-md" file={picture}/>
    </figure>
    <div>
        <h3 class="text-lg font-semibold">{title}</h3>
        <p class="line-clamp-2">{text}</p>
        <ReadMore href={"/blog/" + href}/>
    </div>
</div>