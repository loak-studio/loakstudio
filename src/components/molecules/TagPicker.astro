---
import config from "../../../config";
const {tags,current} = Astro.props
---

<div class="flex flex-wrap w-full max-w-6xl px-4 mx-auto mt-20 gap-7 xl:px-0">
    <a href="/blog/" class={"p-3 transition border-2 rounded-lg hover:border-primary-darker" + " " + ("index" == current ? 'bg-primary-darker text-white border-primary-darker' :null)}  data-tag-picker="all" data-active="true">
        Tous les articles
    </a>
    {tags.map(tag=>
        <a href={"/blog/" + config.createSlug(tag.name) + "/1"} class={"p-3 transition border-2 rounded-lg hover:border-primary-darker" + " " + (config.createSlug(tag.name) == current ? 'bg-primary-darker text-white border-primary-darker' :null)}>
            {tag.name} 
        </a>
    )}
</div>