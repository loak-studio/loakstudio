---

import Icon from "../atoms/Icon.astro"

const {slug,mockup,icon,title,description,type} = Astro.props
---
            <div class="relative flex flex-col items-center w-full max-w-6xl p-4 mx-auto mt-24 transition-all shadow-lg lg:p-16 group lg:flex-row gap-14 bg-lgrey-light rounded-3xl">
                <figure class="w-full max-w-sm max-h-80">
                    <img class="object-cover h-full" src={"/portfolio/" + slug + "/" + mockup} alt="">
                </figure>
                <div class="flex flex-col gap-6">
                    <figure class="w-16">
                        <img src={"/portfolio/" + slug + "/" + icon} alt="">
                    </figure>
                    <h2 class="text-5xl">{title}</h2>
                    <p class="max-w-[64ch]">{description}</p>
                    <span class="self-start p-1 rounded bg-primary text-lwhite">{type}</span>
                </div>
                <Icon name="right" classes="absolute right-10 bottom-10 group-hover:right-8 transition-all"/>
                <a class="before:absolute before:inset-0" href={"/realisations/" + slug}></a>
            </div>