---
const {href="/test",primary=false} = Astro.props
let style = "inline-block rounded-xl leading-5 text-lg p-4 hover:opacity-80 border-2 border-transparent transition cursor-pointer hover:underline" + " "

if(primary){
    style += "bg-primary text-lwhite"
}else{
    style += "bg-white text-lblack hover:border-primary hover:bg-primary hover:bg-opacity-10"
}
const external = href.includes('http:')
---



{!external &&
<a href={href} class={style}>
 <slot/>   
</a> 
}

{external &&
<a href={href} class={style} target="_blank">
 <slot/>   
</a> 
}