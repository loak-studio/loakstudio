---
import Main from "../../layouts/Main.astro"
import ProjectHeader from "../../components/molecules/ProjectHeader.astro"
import Breadcrumb from "../../components/molecules/Breadcrumb.astro"
import Ctacontact from "../../components/molecules/Ctacontact.astro"
import { Markdown } from 'astro/components';
export async function getStaticPaths() {
  const data = await fetch('https://api.storyblok.com/v1/cdn/stories' + `?&token=${"0N5jxUC1Wq7PEsvMxAOmrgtt"}&starts_with=realisations&cv=${Date.now()} `)
  const { stories } = await data.json()
  return stories.map(project => {
    return {
      params: {
        slug: project.content.slug
      },
      props: {
        project
      }
    }
  })
}
const { project } = Astro.props
