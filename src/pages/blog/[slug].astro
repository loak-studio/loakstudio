export async function getStaticPaths() {
    const data = [
        {
            slug: "g-a",
            title: "Google Analytics",
            content: "Lorem"
        }
    ]

    return data.map((post) => {
        return {
            params: { slug: post.slug },
            props: post,
        };
    });
}

